PROGRAM=Checkers
OBJECTS=checkers.o game.o game_display.o game_interaction.o game_checkers.o main_menu.o main-mac.o sprite.o scenegraph-gl.o texture.o input.o text.o
LDFLAGS=-framework Carbon -framework OpenGL -framework AGL
CFLAGS=	-Wall -O2 -std=c99

Checkers.app: $(PROGRAM)
	mkdir -p $@/Contents/{MacOS,Resources}
	cp -r assets/textures $@/Contents/Resources
	cp $< $@/Contents/MacOS

$(PROGRAM): $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) $(LDFLAGS)

clean:
	rm -f $(PROGRAM) $(OBJECTS)
