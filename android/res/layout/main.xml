<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/main">
  <Button
      android:id="@+id/downButton" android:text="↓"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="25dp" />
  <Button
      android:id="@+id/leftButton" android:text="←"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/downButton" />
  <Button
      android:id="@+id/rightButton" android:text="→"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/downButton"
      android:layout_toRightOf="@id/leftButton" />
  <Button
      android:id="@+id/upButton" android:text="↑"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@id/leftButton"
      android:layout_alignParentLeft="true"
      android:layout_marginLeft="25dp" />
  <Button
      android:id="@+id/pauseButton" android:text="Pause"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
  <Button
      android:id="@+id/acceptButton" android:text="X"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/rightButton"
      android:layout_alignParentBottom="true" />
  <Button
      android:id="@+id/backButton" android:text="Y"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/acceptButton"
      android:layout_alignParentBottom="true" />
</RelativeLayout>
